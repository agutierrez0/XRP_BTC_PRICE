@model List<MvcMovie.Models.CryptonatorClass>

@{
    ViewData["Title"] = "btcprice";
}

<meta http-equiv="refresh" content="30"/>

<div class="text-center">
    <h1>CRYPTO CURRENCY</h1>

    @for (int i = 0; i < Model.Count(); i++)
    {
        @if (i == 0) 
        { 
        <h2>
            CURRENT BITCOIN PRICE:
            <mark>
                @Html.DisplayFor(modelItem => Model[i].ticker.price)
            </mark>
        </h2>
        }

        @if (i == 1)
        {
        <h2>
            CURRENT XRP PRICE:
            <mark>
                @Html.DisplayFor(modelItem => Model[i].ticker.price)
            </mark>
        </h2>
        }
    }
    <button style=" color:purple;border-radius:50px;" type="button" onclick="location.reload()">Use me to refresh the page</button>
    <button style=" color:red;border-radius:500px;" type="button" onclick="alert('You pressed the button.')">Use me to see an alert</button>
</div>
